
@{
    ViewBag.Title = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class=" card" style="border:none;font-weight:bold">
    <a href="#">
        <i class="fa fa-briefcase"></i>&nbsp;
        İş Deneyimi Oluştur
    </a>
</div>
<form method="post">
    <div class="card-body">
        <div class="col-12">
            <div class="row">
                <div class="form-group col-6">
                    <label>İş Yeri</label>
                    <input type="text" class="form-control" name="WorkplaceName" placeholder="İş yeri adını giriniz...">
                </div>
            </div> <div class="row">
                <div class="form-group col-6">
                    <label>Pozisyon</label>
                    <input type="text" class="form-control" name="Position" placeholder="Pozisyon giriniz...">
                </div>
            </div> <div class="row">
                       <div class="form-group col-6">
                           <label>Açıklama</label>
                           <textarea class="form-control" name="Description" rows="3" placeholder="Açıklama giriniz..."></textarea>
                       </div>
            </div>
            <button type="submit" class="btn btn-success">Deneyimi Kaydet</button>
        </div>
    </div>
</form>

<style>
    label {
        font-weight: bold;
    }
</style>

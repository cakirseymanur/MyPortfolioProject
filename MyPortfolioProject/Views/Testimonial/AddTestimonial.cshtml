
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class=" card" style="border:none;font-weight:bold">
    <a href="#">
        <i class="fa fa-users"></i>&nbsp;
        Referans Oluştur
    </a>
</div>
<form method="post">
    <div class="card-body">
        <div class="col-12">
            <div class="row">
                <div class="form-group col-6">
                    <label>Ad Soyad</label>
                    <input type="text" class="form-control" name="NameSurname" placeholder="Referans adını giriniz...">
                </div>
                <div class="form-group col-6">
                    <label>İş Yeri</label>
                    <input type="text" class="form-control" name="Workplace" placeholder="İş yeri adını giriniz...">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label>Meslek</label>
                    <input type="text" class="form-control" name="Profession" placeholder="Meslek giriniz...">
                </div>
                <div class="form-group col-6">
                    <label>Şehir</label>
                    <input type="text" class="form-control" name="City" placeholder="Şehir giriniz...">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12">
                    <label>Açıklama</label>
                    <textarea class="form-control" name="Description" rows="3" placeholder="Açıklama giriniz..."></textarea>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label >Durum</label>
                    <select name="Status" class="form-control">
                        <option selected value="True">Aktif</option>
                        <option value="False">Pasif</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Referansı Kaydet</button>
        </div>
    </div>
</form>
<style>
    label {
        font-weight: bold;
    }
   
</style>

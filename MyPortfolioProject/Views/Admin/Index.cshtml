@model MyPortfolioProject.Models.Entities.Tbl_Admin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class=" card" style="border:none;font-weight:bold">
    <a href=#>
        <i class="fa fa-user-circle"></i>
        &nbsp; Admin Kullanıcı Bilgileri
    </a>
</div>
<form method="post">
    <div class="card-body">
        <div class="col-12">
            <div class="row">
                <div class="form-group col-6">
                    @Html.HiddenFor(x => x.AdminID)
                    <label><i class="fa fa-user"></i>&nbsp;Kullanıcı Adı</label>
                    <input type="text" class="form-control" name="UserName" placeholder="Kullanıcı Adınız..." value="@Model.UserName">
                </div>
                <div class="form-group col-6">
                    <label><i class="fa fa-key"></i>&nbsp;Şifre</label>
                    <input type="password" class="form-control" name="Password" placeholder="Şifrenizi girin..." value="@Model.Password">
                </div>
            </div>
            @*<div class="row">
                <div class="form-group col-6">
                    <label>Durum</label>
                    <input type="text" class="form-control" name="Status" placeholder="Durum..." value="@Model.Status">
                </div>
            </div>*@
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </div>
    </div>

</form>

<style>
    label {
        font-weight: bold;
    }
</style>

